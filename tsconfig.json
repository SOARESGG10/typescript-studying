{
    "compilerOptions": {
        "target": "ES6",
        "useDefineForClassFields": true,
        "module": "CommonJS",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "allowJs": true,
        "sourceMap": true,

        /* Bundler mode */
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "outDir": "./dist",
        "removeComments": true,
        "noEmitOnError": true,

        /* Linting */
        "strict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"]
}
